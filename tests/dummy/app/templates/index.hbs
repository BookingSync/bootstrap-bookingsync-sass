{{#bsy-annotated-section}}
  {{#bsy-annotated-section.annotation}}
    <h2 class="annotated-section-title">Forms</h2>
  {{/bsy-annotated-section.annotation}}
  {{#bsy-annotated-section.content}}
    <form>
      {{bsy-input
        label="Email address"
        value=currentEmail
        update=(action (mut currentEmail))
        type="email"
        inputId="email"
      }}

      <div class="row">
        <div class="col-xs-6">
          {{bsy-input
            label="First name"
            value=currentFirstName
            update=(action (mut currentFirstName))
            inputId="firstname"
          }}
        </div>

        <div class="col-xs-6">
          {{bsy-input
            label="Last name"
            value=currentLastName
            update=(action (mut currentLastName))
            inputId="lastname"
          }}
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <label class="control-label" for="amount">Amount</label>
          {{one-way-input
            value=currentAmount
            update=(action (mut currentAmount))
            class="form-control"
            type="number"
            id="amount"
          }}
          <div class="input-group-addon">.00</div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4">
          {{#bsy-select
            label="Destination"
            selected=currentDestination
            options=cities
            onchange=(action (mut currentDestination))
            inputId="destination"
            as |name|
          }}
            {{name}}
          {{/bsy-select}}
        </div>

        <div class="col-xs-4">
          {{#bsy-select
            label="Destination"
            selected=currentDestination
            options=cities
            searchEnabled=false
            onchange=(action (mut currentDestination))
            inputId="destination2"
            as |name|
          }}
            {{name}}
          {{/bsy-select}}
        </div>

        <div class="col-xs-4">
          {{#bsy-select-multiple
            label="Destinations"
            selected=currentDestinations
            options=cities
            onchange=(action (mut currentDestinations))
            inputId="destinations"
            as |name|
          }}
            {{name}}
          {{/bsy-select-multiple}}
        </div>
      </div>

      {{bsy-textarea
        label="Comment"
        value=currentComment
        update=(action (mut currentComment))
        inputId="comment"
        rows=3
      }}

      {{bsy-checkbox
        isChecked
        label="Check me out"
        update=(action (mut isChecked))
      }}

      {{bsy-radio
        selectedRentalType
        label="Apartment"
        option="apartment"
        update=(action (mut selectedRentalType))
      }}
      {{bsy-radio
        selectedRentalType
        label="House"
        option="house"
        update=(action (mut selectedRentalType))
      }}
      {{bsy-radio
        selectedRentalType
        label="Villa"
        option="villa"
        update=(action (mut selectedRentalType))
      }}

      <h3>Radio buttons</h3>
      {{#bsy-radio-buttons aria-label="Rental Type"}}
        {{bsy-radio-buttons.button
          selectedRentalType
          label="Apartment"
          option="apartment"
          update=(action (mut selectedRentalType))
        }}
        {{bsy-radio-buttons.button
          selectedRentalType
          label="House"
          option="house"
          update=(action (mut selectedRentalType))
        }}
        {{bsy-radio-buttons.button
          selectedRentalType
          label="Villa"
          option="villa"
          update=(action (mut selectedRentalType))
        }}
      {{/bsy-radio-buttons}}
    </form>

    <h3>Inline form</h3>
    <form class="form-inline">
      {{bsy-input
        label="Name"
        value=currentName
        update=(action (mut currentName))
        inputId="name2"
      }}

      {{bsy-input
        label="Email address"
        value=currentEmail
        update=(action (mut currentEmail))
        inputId="email2"
      }}

      {{#bsy-button type="submit" loadingLabel="Sending..."}}Send invitation{{/bsy-button}}
    </form>
  {{/bsy-annotated-section.content}}
{{/bsy-annotated-section}}

