{{#if label}}
  <label for="{{inputId}}">{{label}}</label>
{{/if}}
{{#power-select
  selected=selected
  options=options
  searchEnabled=searchEnabled
  searchField=searchField
  onchange=onchange
  placeholder=placeholder
  id=inputId
  class="form-control"
  as |option name|
}}
  {{yield option name}}
{{/power-select}}
